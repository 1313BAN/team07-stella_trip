<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.stella_trip.dao.user.UserProfileDAO">

    <!-- 사용자 프로필 정보를 UserProfileResponseDTO에 매핑 -->
    <resultMap id="UserProfileMap" type="UserProfileResponseDTO">
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="image" property="image"/>
        <result column="follower_count" property="follower_count"/>
        <result column="following_count" property="following_count"/>
    </resultMap>

    <!-- 자신의 프로필 정보를 MyProfileResponseDTO에 매핑 -->
    <resultMap id="MyProfileMap" type="MyProfileResponseDTO">
        <result column="name" property="name"/>
        <result column="email" property="email"/>
        <result column="description" property="description"/>
        <result column="image" property="image"/>
        <result column="follower_count" property="follower_count"/>
        <result column="following_count" property="following_count"/>
    </resultMap>

    <!-- 특정 사용자 ID로 프로필 정보 조회 -->
    <select id="getUserProfileByUserId" resultMap="UserProfileMap">
        select
        u.name,
        u.description,
        u.image,
        (select count(*) from follower f where f.user_id = u.user_id) as follower_count,
        (select count(*) from follower f where f.following_id = u.user_id) as following_count
        from user u
        where u.user_id = #{userId}
    </select>

    <!-- 자신의 ID로 프로필 정보 조회 -->
    <select id="getMyProfileByUserId" resultMap="MyProfileMap">
        select
        u.name,
        u.email,
        u.description,
        u.image,
        (select count(*) from follower f where f.user_id = u.user_id) as follower_count,
        (select count(*) from follower f where f.following_id = u.user_id) as following_count
        from user u
        where u.user_id = #{userId}
    </select>

    <!-- 자신의 프로필 정보 수정 -->
    <update id="updateMyProfileByUserId">
        update user
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="image != null">image = #{image},</if>
        </set>
        where user_id = #{userId}
    </update>

    <!-- 자신의 비밀번호 수정 -->
    <update id="updatePasswordByUserId">
        update user
        <set>
            <if test="password != password">password = #{password},</if>
        </set>
        where user_id = #{userId}
    </update>

</mapper>